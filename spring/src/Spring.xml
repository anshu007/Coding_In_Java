<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
                  
<beans>
<bean id="riangle" class="com.anshu.Triangle1">
<property name="pointa" ref="x"/>
<property name="pointb" ref="y"/>
<property name="pointc" ref="z"/>

</bean>

<bean id="x" class="com.anshu.Point">
<property name="x" value="0"/>
<property name="y" value="1"/>
</bean>

<bean id="y" class="com.anshu.Point">
<property name="x" value="8"/>
<property name="y" value="9"/>
</bean>

<bean id="z" class="com.anshu.Point">
<property name="x" value="7"/>
<property name="y" value="6"/>
</bean>


</beans>
